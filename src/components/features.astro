---
// @ts-ignore
import { Icon } from "astro-icon/components";
import Outdoor from "assets/Outdoor.jpg";
import { Picture } from "astro:assets";
import { any } from "astro:schema";
import Link from "./ui/link.astro";

const features : any = [
  {
    title: "Outdoor LED Advertising",
    description:
      "Build your site using React, Svelte, Vue, Preact, web components, or just plain ol' HTML + JavaScript.",
    icon: "bx:bxs-briefcase",
    image : Outdoor,
  },
  {
    title: "Indoor LED Advertising",
    description:
      "Astro renders your entire page to static HTML, removing all JavaScript from your final build by default.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Airport Advertising",
    description:
      "Need some JS? Astro can automatically hydrate interactive components when they become visible on the page.  ",
    icon: "bx:bxs-data",
  },
  {
    title: "Hoardings and Branding",
    description:
      "Astro supports TypeScript, Scoped CSS, CSS Modules, Sass, Tailwind, Markdown, MDX, and any other npm packages.",
    icon: "bx:bxs-bot",
  },
  {
    title: "Events",
    description:
      "Automatic sitemaps, RSS feeds, pagination and collections take the pain out of SEO and syndication. It just works!",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Productions",
    description:
      "Astro is an open source project powered by hundreds of contributors making thousands of individual contributions.",
    icon: "bx:bxs-user",
  },
  {
    title: "Projects",
    description:
      "Astro is an open source project powered by hundreds of contributors making thousands of individual contributions.",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Transforming brands with innovative advertising solutions
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Astro comes batteries included. It takes the best parts of state-of-the-art
    tools and adds its own innovations.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex flex-col bg-[#F0F8FF] rounded-lg">
        <div>
          <Picture
            src={item?.image || Outdoor}
            alt="Astronaut in the air"
            widths={[200, 400, 600]}
            sizes="(max-width: 800px) 100vw, 620px"
            loading="eager"
            format="webp,png"
            class="w-full h-40 object-cover rounded-t-lg"
          />
        </div>
        <div class="flex flex-col gap-4 px-4 py-6">
          {" "}
          <div class="flex flex-row gap-4">
          <div class="mt-1 bg-[#0A91D9] rounded-full  p-2 w-8 h-8 shrink-0">
            <Icon class="text-white" name={item.icon} />
          </div>
          <div>
            <h3 class="font-semibold text-2xl text-[#0A91D9]">{item.title}</h3>{" "}
            <p class="text-slate-500">Outdoor Screens</p>
            {/* <p class="text-slate-500 mt-2 leading-relaxed">
              {item.description}
            </p> */}
          </div>
        </div>
          <div>
            <div class="flex flex-row gap-5 justify-between items-center">
              <p class="text-gray-500">Outdoor Screens</p>
              <Link href="#" class="rounded-full bg-transparent-500 px-2 py-1.5">View</Link>
            </div>
          </div>
        </div>
      </div>
    ))
  }
</div>
